pkgname=myMPD
pkgver=6.2.3
pkgrel=0
pkgdesc="myMPD is a standalone and mobile friendly web mpdclient"
url="https://github.com/jcorporation/myMPD"
arch="all"
license="GPL-2.0-or-later"
depends="libid3tag flac openssl"
makedepends="cmake libid3tag-dev flac-dev openssl-dev linux-headers"
install="$pkgname.pre-install"
source="mympd_$pkgver.orig.tar.gz"
builddir="$srcdir"
options="!check"
#no test suite

build() {
	cd "$builddir" || exit 1
	mkdir release
	cd release || exit 1
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=RELEASE ..
	make
}

package() {
	cd "$builddir/release" || exit 1
	make DESTDIR="$pkgdir" install
}

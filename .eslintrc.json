{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "no-eval": "error",
        "eqeqeq": ["error", "always", { "null": "ignore" }],
        "no-shadow-restricted-names": "error",
        "block-scoped-var": "error",
        "no-alert": "error",
        "no-eq-null": "error",
        "no-implied-eval": "error",
        "no-shadow": "error"
    }
}
